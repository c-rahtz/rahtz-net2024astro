---
import SiteContactForm from '../site/SiteContactForm.astro'
---

<div id="contact-me">
    <div class="container">
      <h2>Get in touch.</h2>
      <div class="row">
        <div class="column column-50 column-offset-25">
          <SiteContactForm />
        </div>
      </div>
    </div>
</div>



<style lang="scss">
  #contact-me {
    background: var(--flamingo);
    padding: 5em 0;
    box-shadow: inset 0 5px 4px #4c4c4c26;
    border-bottom: 1rem solid var(--mintjulep);
  }
  h2 {
    text-transform: capitalize;
    font-family: var(--script-font-family);
    font-size: 5.7rem;
    width: 100%;
    color: white;
    text-align: center;
  }
  form {
    color: white;
  }
  input,
  textarea {
    box-shadow: 5px 5px 5px #ddd;
  }
  @media screen and (max-width: 640px) {
    #contact-me {
      padding: 4rem 0 6rem;
    }
    .row .column.column-50 {
      flex: 0 0 80%;
      max-width: 80%;
    }
    .row .column.column-offset-25 {
      margin-left: 10%;
    }
  }
  </style>
  